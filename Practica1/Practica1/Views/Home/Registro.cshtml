@{
    Layout = "~/Views/Shared/_LayoutRegistro.cshtml";
    ViewBag.Title = "Registro";
}


<body>
    <main>
        <article>
            <section>
                <form action="/" method="POST" id="register">
                    <h1>Registrate</h1>

                    <img src="~/root/dist/icons-social/facebook.png" title="Inicia Sesion con Facebook" alt="Inicia Sesion con Facebook">
                    <img src="~/root/dist/icons-social/google.png" title="Inicia Sesion con Google" alt="Inicia Sesion con Google">

                    <input type="text" name="name" placeholder="Nombre"><br />
                    <input type="text" name="surname" placeholder="Apellidos"><br />
                    <input type="email" name="email" placeholder="Correo electr&oacute;nico"><br />
                    <input type="password" name="password" placeholder="Contrase&ntilde;a"><br />
                    <input type="password" name="password2" placeholder="Repite la Contrase&ntilde;a"><br />
                    <button type="submit">Entrar</button>
                    <button type="reset">Limpiar</button>

                    <p>¿Ya tienes cuenta?</p>
                    <p>
                        <a href="index.html">Inicia Sesion</a>
                    </p>
                </form>
            </section>
        </article>
    </main>

</body>